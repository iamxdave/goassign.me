<%- include('../../partials/header') %>
    <main>
        <div class="main-divider">
            <section>
                <div class="alert alert-delete">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    Successfully deleted note
                </div> 
                <h2>Notes</h2>
                <table class="table-list">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Implementation</th>
                            <th class="display">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>this is title of my note and its super fun to work with and it's not even the longest title possible!</td>
                            <td class="table-date">
                                <input type="text" name="date" id="date" value="dd.mm.rrrr" disabled>
                            </td>
                            <td class="display">
                                <ul class="list-actions">
                                    <li><a href="notes/details" class="list-actions-button-details">Details</a></li>
                                    <li><a href="notes/edit" class="list-actions-button-edit">Edit</a></li>
                                    <li><a href="" class="list-actions-button-delete">Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="display-small">
                            <td colspan="2">
                                <ul class="list-actions">
                                    <li><a href="notes/details" class="list-actions-button-details">Details</a></li>
                                    <li><a href="notes/edit" class="list-actions-button-edit">Edit</a></li>
                                    <li><a href="" class="list-actions-button-delete">Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-buttons">
                    <a href="notes/add" class="button-add">Add new note</a>
                </div>
            </section>
        </div>
    </main>
<%- include('../../partials/footer') %>
