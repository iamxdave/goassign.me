<%- include('../../partials/header') %>
    <main>
        <div class="main-divider">
            <section>
                <div class="alert alert-delete">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    Successfully deleted note
                </div> 
                <h2>Notes</h2>
                <% if(notes == null || notes.length == 0) { %>
                    <h3>There are no notes</h3>
                <% } else { %>
                    <table class="table-list">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Implementation</th>
                                <th class="display">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let note of notes) { %>
                                <tr>
                                    <td><%= note.title %></td>
                                    <td class="table-date">
                                        <input type="text" name="date" id="date" value="<%= note.implementation %>" disabled>
                                    </td>
                                    <td class="display">
                                        <ul class="list-actions">
                                            <li><a href="notes/details/<%= note._id %>" class="list-actions-button-details">Details</a></li>
                                            <li><a href="notes/edit/<%= note._id %>" class="list-actions-button-edit">Edit</a></li>
                                            <li><a href="notes/delete/<%= note._id %>" class="list-actions-button-delete">Delete</a></li>
                                        </ul>
                                    </td>
                                </tr>
                                <tr class="display-small">
                                    <td colspan="2">
                                        <ul class="list-actions">
                                            <li><a href="notes/details/<%= note._id %>" class="list-actions-button-details">Details</a></li>
                                            <li><a href="notes/edit/<%= note._id %>" class="list-actions-button-edit">Edit</a></li>
                                            <li><a href="notes/delete/<%= note._id %>" class="list-actions-button-delete">Delete</a></li>
                                        </ul>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } %> 
                <div class="form-buttons">
                    <a href="notes/add" class="button-add">Add new note</a>
                </div>
            </section>
        </div>
    </main>
<%- include('../../partials/footer') %>
