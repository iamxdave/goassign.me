<%- include('../../partials/header') %>
    <main>
        <div class="main-divider">
            <section>
                <div class="alert">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    Successfully added note
                </div> 
                <h2>Add a new note</h2>
                <form class="form form-larger" novalidate onsubmit="return validateForm();">
                    
                    <label for="title">Title: <span class="symbol-required">*</span></label>
                    <input type="text" name="title" id="title">
                    <span id="errorTitle" class="errors-text"></span>
                
                    <label for="creation">Creation:</label>
                    <input type="date" name="creation" id="creation" value="2018-06-10" disabled>

                    <label for="implementation">Implementation:</label>
                    <input type="date" name="implementation" id="implementation">
                
                    <label for="description">Description: <span class="symbol-required">*</span></label>
                    <textarea name="description" id="description" cols="30" rows="10"></textarea>
                    <span id="errorDescription" class="errors-text"></span>
                    
                    <p id="errorSummary" class="errors-text hidden-error">Form contains errors</p>

                    <div class="form-buttons">
                        <input type="submit" value="Add" class="form-button-submit">
                        <a href="list" class="form-button-cancel">Decline</a>
                    </div>
                </form>
            </section>
        </div>
    </main>
    <script type="application/javascript" src="/js/validationCommon.js"></script>
    <script type="application/javascript" src="/js/validationFormNotes.js"></script>
<%- include('../../partials/footer') %>