
<%- include('../../partials/header.ejs') %>
<main>
    <div class="main-divider">
        <section>
            <div class="alert alert-delete">
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                Successfully deleted user
            </div> 
            <h2>Users</h2>
            <% if(users == null || users.length == 0) { %>
                <h3>There are no users</h3>
            <% } else { %>
                <table class="table-list">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th class="display">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let user of users) { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td class="display">
                                    <ul class="list-actions">
                                        <li><a href="users/details/<%= user._id %>" class="list-actions-button-details">Details</a></li>
                                        <li><a href="users/edit/<%= user._id %>" class="list-actions-button-edit">Edit</a></li>
                                        <li><a href="users/delete/<%= user._id %>" class="list-actions-button-delete">Delete</a></li>
                                    </ul>
                                </td>
                            </tr>
                            <tr class="display-small">
                                <td colspan="2">
                                    <ul class="list-actions">
                                        <li><a href="users/details/<%= user._id %>" class="list-actions-button-details">Details</a></li>
                                        <li><a href="users/edit/<%= user._id %>" class="list-actions-button-edit">Edit</a></li>
                                        <li><a href="users/delete/<%= user._id %>" class="list-actions-button-delete">Delete</a></li>
                                    </ul>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %> 
            <div class="form-buttons">
                <a href="users/add" class="button-add">Add new user</a>
            </div>
        </section>
    </div>
</main>
<%- include('../../partials/footer.ejs') %>
